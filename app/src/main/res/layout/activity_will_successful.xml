<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BankPage"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="1.3"
        android:background="@drawable/rectangle_blue"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/monteserrat_bold"
                android:text="Vasiyat Niti"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/circle_pink"
                android:src="@drawable/ic_baseline_person_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Your Will is important\nfor you and your loved\nones; track it here."
                android:textColor="@color/white"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tick"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Will registered\n\t\tsuccessfully"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="25sp"
        android:textColor="@color/blue"
        android:layout_gravity="center"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingHorizontal="25sp"
                android:text="Registration Details:"
                android:textColor="@color/blue"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="0.68"
                android:background="@drawable/rectanglepink"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Token ID : WILL89XX4503mh22\nReg :THANE,AX78905\nRegistration Date: 26/03/2022\nAmount Paid : 100INR\nDocument Uploaded:- will.nikhilsinggh.pdf\n\nWitness:\n1.Pojaa Singh\n2.Nisha Awasthi"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="23sp"
                    android:padding="15dp"
                    android:textColor="@color/blue"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:weightSum="4">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@drawable/ic_group_user"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@drawable/ic_tick"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@drawable/medals"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000"
            android:src="@drawable/ic_heirarchy"/>

    </LinearLayout>


</LinearLayout>