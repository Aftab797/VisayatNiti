<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BankPage"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@drawable/rectangle_blue"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/monteserrat_bold"
                android:text="Vasiyat Niti"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/circle_pink"
                android:src="@drawable/ic_baseline_person_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Banking portfolio\nas Nominee"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@drawable/white_box"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp">

                <TextView
                    android:id="@+id/num_of_nomi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:text="8"
                    android:textColor="@color/blue"
                    android:textFontWeight="400"
                    android:textSize="30sp" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/info"/>

            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:background="@drawable/pink_box"
                        android:textColor="@color/pink"
                        android:layout_marginEnd="10dp"
                        android:elevation="5dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/deposit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fixed Deposits"
                        android:background="@drawable/pink_box"
                        android:textColor="@color/pink"
                        android:layout_marginEnd="10dp"
                        android:paddingHorizontal="15dp"
                        android:elevation="5dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/accounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Savings Account"
                        android:background="@drawable/pink_box"
                        android:textColor="@color/pink"
                        android:layout_marginEnd="10dp"
                        android:paddingHorizontal="15dp"
                        android:elevation="5dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/currentAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Account"
                        android:background="@drawable/pink_box"
                        android:textColor="@color/pink"
                        android:layout_marginEnd="10dp"
                        android:paddingHorizontal="15dp"
                        android:elevation="5dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/providentFunds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provident Fund"
                        android:background="@drawable/pink_box"
                        android:textColor="@color/pink"
                        android:layout_marginEnd="10dp"
                        android:paddingHorizontal="15dp"
                        android:elevation="5dp"/>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:background="@drawable/pink_fill"
            android:paddingHorizontal="30dp"
            android:paddingTop="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>